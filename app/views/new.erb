<form action="/robots" method="post">
  <p>Create a new Robot:</p>
  <input type='text' name='robot[name]' placeholder='Name'/><br/>
  <input type='text' name='robot[city]' placeholder='City'/><br/>
  <input type='text' name='robot[state]' placeholder='State' /><br/>
  <input type='text' name='robot[avatar]' placeholder='Avatar'/><br/>
  <input type='text' name='robot[birth_date]' placeholder='Birth Date'/><br/>
  <input type='text' name='robot[date_hired]' placeholder='Date Hired'/><br/>
  <input type='text' name='robot[department]' placeholder='Department'/><br/>
